<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/ace_of_hearts"
        android:id="@+id/card1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_width="104dp" />

    <ImageView
        app:srcCompat="@drawable/i2_of_hearts"
        android:id="@+id/card2"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_width="104dp" />
    <ImageView
        app:srcCompat="@drawable/i3_of_hearts"
        android:id="@+id/card3"
        android:layout_marginLeft="242dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_width="104dp" />
    <ImageView
        app:srcCompat="@drawable/i4_of_hearts"
        android:id="@+id/card4"
        android:layout_marginLeft="358dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_width="104dp" />

    <ImageView
        app:srcCompat="@drawable/i5_of_hearts"
        android:id="@+id/card5"
        android:layout_marginLeft="474dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_width="104dp"/>

    <!--<TextView-->
