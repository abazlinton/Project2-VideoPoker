<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/ace_of_hearts"
        android:id="@+id/card1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_width="104dp" />

    <ImageView
        app:srcCompat="@drawable/i2_of_hearts"
        android:id="@+id/card2"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_width="104dp" />
    <ImageView
        app:srcCompat="@drawable/i3_of_hearts"
        android:id="@+id/card3"
        android:layout_marginLeft="242dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_width="104dp" />
    <ImageView
        app:srcCompat="@drawable/i4_of_hearts"
        android:id="@+id/card4"
        android:layout_marginLeft="358dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_width="104dp" />

    <ImageView
        app:srcCompat="@drawable/i5_of_hearts"
        android:id="@+id/card5"
        android:layout_marginLeft="474dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_width="104dp"/>

    <TextView
        android:text="HOLD"
        android:layout_width="104dp"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:layout_height="20dp"
        android:id="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:visibility="visible"

        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@android:color/black" />

    <Button
        android:text="START"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/start"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start"
        android:layout_marginLeft="10dp"
        android:id="@+id/hand_rank"
        android:textSize="14sp" />


</RelativeLayout>